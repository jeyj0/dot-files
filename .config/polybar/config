[colors]
bg = #1c1e1f
fg-dim = #525254
fg = #d6d6d4
fg-warn = #fb2874
# fg-important = #fd971f

[bars]
background = ${colors.bg}
foreground = ${colors.fg}
padding-right = 1
module-margin = 1
separator = |

font-0 = "Fira Code:size=10:weight=bold;2"
font-1 = "FontAwesome:size=10:pixelsize=12:style=Solid;2"

[bar/bar]
inherit = bars
monitor = ${env:MONITOR:DP-0}

tray-position = right
tray-maxsize = 16
tray-padding = 2

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

modules-left = i3
modules-center = datetime
modules-right = lan-network pulseaudio

[module/i3]
type = internal/i3
pin-workspaces = true
label-unfocused-foreground = ${colors.fg-dim}

[module/datetime]
type = internal/date
date = %d.%m.%Y %H:%M
label-foreground = ${colors.fg-dim}

[module/lan-network]
type = internal/network
interface = enp0s31f6

label-connected = " %local_ip% %downspeed:9% (down)  %upspeed:9% (up)"
label-connected-foreground = ${colors.fg-dim}

[module/pulseaudio]
type = internal/pulseaudio
interval = 1

format-volume = <ramp-volume><label-volume>
label-volume = " %percentage%"

label-muted = "MUTED"
label-muted-font = 1
label-muted-foreground = ${colors.fg-warn}

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-3 = ""
ramp-font = 1
click-right = pavucontrol &
